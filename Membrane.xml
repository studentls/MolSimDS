<simulationfile xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="simulationfile.xsd">

  <params>
    <dimension>2</dimension>
    <output>out</output>
    
    <iterationsperoutput>10</iterationsperoutput>
    <initialTemperature>0</initialTemperature>
    <iterationsTillThermostatApplication>-1</iterationsTillThermostatApplication>
    <targetTemperature>0</targetTemperature>
    <temperatureStepSize>0</temperatureStepSize>
    <gravity>-0.001</gravity>
   
    <delta_t>0.01</delta_t>
    <epsilon>1.0</epsilon>
    <outputfmt>VTK</outputfmt>
    <sigma>1.0</sigma>
    
    <t_end>500.0</t_end>
    <t_start>0.0</t_start>
    
    <algorithm>
      <Membrane>
        <pull_iterations>15000</pull_iterations>
      </Membrane>
    </algorithm>
    
  </params>

  <data>
  </data>

</simulationfile>
