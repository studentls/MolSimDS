<?xml version="1.0"?>

<!--

file: ThermostatBig.xml big experiment for Thermostat functionality
author: F.Dietz & L.Spiegelberg

-->

<simulationfile xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="simulationfile.xsd">

  <params>
    <dimension>2</dimension>
    <output>out</output>
    
    <iterationsperoutput>10</iterationsperoutput>
    <initialTemperature>0</initialTemperature>
    <iterationsTillThermostatApplication>-1</iterationsTillThermostatApplication>
    <targetTemperature>0</targetTemperature>
    <temperatureStepSize>0</temperatureStepSize>
    <gravity>-0.001</gravity>
   
    <delta_t>0.01</delta_t>
    <epsilon>1.0</epsilon>
    <outputfmt>VTK</outputfmt>
    <sigma>1.0</sigma>
    
    <t_end>500.0</t_end>
    <t_start>0.0</t_start>
    
    <algorithm>
      <LinkedCell>
        <cutoff_radius>4.0</cutoff_radius>
        <sizeofdomainX>148.0</sizeofdomainX>
        <sizeofdomainY>148.0</sizeofdomainY>
        <sizeofdomainZ>148.0</sizeofdomainZ>
        <offset>0.0 0.0 0.0</offset>
        <conditions>
          <condition value="front" type="reflective"></condition>
          <condition value="left" type="periodic"></condition>
          <condition value="right" type="periodic"></condition>
        </conditions>
      </LinkedCell>
    </algorithm>
    
  </params>

  <data>
    <!-- material1-->
    <material epsilon="1.0" sigma="1.2" name="Liquid1"/>
    <!-- material1-->
    <material epsilon="1.0" sigma="1.1" name="Liquid2"/>
    
    <!-- C1 -->
    <cuboid>
      <h>1.2</h>
      <m>1</m>
      <N>250 20 1</N>
      <V>0.0 0.0 0.0</V>
      <X>0.6 2.0 0.0</X>
      <material>Liquid1</material>
    </cuboid>
    
    <!-- C2 -->
    <cuboid>
      <h>1.2</h>
      <m>2.0</m>
      <N>250 20 1</N>
      <V>0.0 0.0 0.0</V>
      <X>0.6 27.0 0.0</X>
      <material>Liquid2</material>
    </cuboid>
    
  </data>

</simulationfile>
