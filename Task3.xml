<simulationfile xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="simulationfile.xsd">

  <params>
    <output>out</output>
    
    <iterationsperoutput>10</iterationsperoutput>
    <gravity>0</gravity>
    <timestepsPerThermostatApplication>-1</timestepsPerThermostatApplication>
    <initialTemperature>0.0</initialTemperature>
    <targetTemperature>2.0</targetTemperature>
    <temperatureDifferenceStepSize>0.1</temperatureDifferenceStepSize>
   
    <delta_t>0.0005</delta_t>
    <epsilon>5.0</epsilon>
    <outputfmt>VTK</outputfmt>
    <sigma>1.0</sigma>
    
    <t_end>20.0</t_end>
    <t_start>0.0</t_start>
    
    <algorithm>
      <LinkedCell>
        <cutoff_radius>3.0</cutoff_radius>
        <sizeofdomainX>180.0</sizeofdomainX>
        <sizeofdomainY>90.0</sizeofdomainY>
        <sizeofdomainZ>0.0</sizeofdomainZ>
        <offset>0.0 0.0 0.0</offset>
        <conditions>
          <condition value="all"></condition>
        </conditions>
      </LinkedCell>
    </algorithm>
    
  </params>

  <data>
    <!-- C1 -->
    <cuboid>
      <h>1.1225</h>
      <m>1</m>
      <N>100 20 1</N>
      <V>0.0 0.0 0.0</V>
      <X>20.0 20.0 0.0</X>
    </cuboid>
    
    <!-- C2 -->
    <cuboid>
      <h>1.1225</h>
      <m>1</m>
      <N>20 20 1</N>
      <V>0.0 -10.0 0.0</V>
      <X>70.0 60.0 0.0</X>
    </cuboid>
  </data>

</simulationfile>
