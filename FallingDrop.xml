<simulationfile xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="simulationfile.xsd">

  <params>
    <output>out</output>
    
    <iterationsperoutput>10</iterationsperoutput>
    <brownianMotionFactor>0.1</brownianMotionFactor>
   
    <delta_t>0.0005</delta_t>
    <epsilon>5.0</epsilon>
    <outputfmt>VTK</outputfmt>
    <sigma>1.0</sigma>
    
    <t_end>30.0</t_end>
    <t_start>0.0</t_start>
    
    <algorithm>
      <LinkedCell>
        <cutoff_radius>20.0</cutoff_radius>
        <sizeofdomainX>20.0</sizeofdomainX>
        <sizeofdomainY>20.0</sizeofdomainY>
        <sizeofdomainZ>0.0</sizeofdomainZ>
        <offset>0.0 0.0 0.0</offset>
        <conditions>
          <condition value="all"></condition>
        </conditions>
      </LinkedCell>
    </algorithm>
    
  </params>

  <data>
    <!-- material1-->
    <material epsilon="5.0" sigma="1.0" name="sphereMat"/>
   
    <!-- C1 -->
    <cuboid >
      <h>1.1225</h>
      <m>1</m>
      <N>10 10 1</N>
      <V>0.0 -10.0 0.0</V>
      <X>5.0 5.0 5.0</X>
      <material>sphereMat</material>
    </cuboid>
  </data>

</simulationfile>
