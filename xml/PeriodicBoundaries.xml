<?xml version="1.0"?>

<!--

file: PeriodicBoundaries.xml simple test file to simulate periodic boundaries
author: F.Dietz & L.Spiegelberg

-->

<simulationfile xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="simulationfile.xsd">

  <params>
    <dimension>2</dimension>
    <output>out</output>
    
    <iterationsperoutput>10</iterationsperoutput>
    <brownianMotionFactor>0.1</brownianMotionFactor>
   
    <delta_t>0.0005</delta_t>
    <epsilon>5.0</epsilon>
    <outputfmt>VTK</outputfmt>
    <sigma>1.0</sigma>
    
    <t_end>30.0</t_end>
    <t_start>0.0</t_start>
    
    <algorithm>
      <LinkedCell>
        <cutoff_radius>20.0</cutoff_radius>
        <sizeofdomainX>20.0</sizeofdomainX>
        <sizeofdomainY>20.0</sizeofdomainY>
        <sizeofdomainZ>0.0</sizeofdomainZ>
        <offset>0.0 0.0 0.0</offset>
        <conditions>
          <condition value="left" type="periodic"></condition> 
          <condition value="right" type="periodic"></condition>
          <condition value="bottom" type="reflective"></condition>
        </conditions>
      </LinkedCell>
    </algorithm>
    
  </params>

  <data>
    <!-- material1-->
    <material epsilon="5.0" sigma="1.0" name="sphereMat"/>
    
    <!-- one single particle -->
    <particle>
      <X>1.4 5.0 0.0</X>
      <V>-10.0 0.0 0.0</V>
      <m>1.0</m>
      <material>sphereMat</material>
    </particle>
   
  </data>

</simulationfile>
